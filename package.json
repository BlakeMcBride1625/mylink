{
  "name": "myhub",
  "version": "1.0.0",
  "type": "module",
  "description": "MY HUB - Real-time personal dashboard by @epildev",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite --port $npm_package_config_frontendPort",
    "dev:backend": "tsx watch server/index.ts",
    "build": "tsc && vite build",
    "build:backend": "tsc --project tsconfig.server.json",
    "start": "node server/index.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "check-env": "node scripts/check-env.js",
    "generate-secret": "node scripts/generate-session-secret.js",
    "setup": "npm install && npm run generate-secret && npm run check-env",
    "badges:download": "bash scripts/download-all-badges.sh",
    "badges:check": "node scripts/check-badge-changes.js",
    "badges:update": "bash scripts/daily-badge-update.sh"
  },
  "config": {
    "frontendPort": "1500",
    "backendPort": "1600"
  },
  "dependencies": {
    "@react-three/drei": "^9.99.0",
    "@react-three/fiber": "^8.15.16",
    "@types/pg": "^8.15.6",
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.0",
    "framer-motion": "^11.0.3",
    "lucide-react": "^0.344.0",
    "nodemailer": "^6.9.9",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "pg": "^8.16.3",
    "prism-react-renderer": "^2.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0",
    "three": "^0.161.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-discord": "^0.1.13",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/three": "^0.161.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0"
  }
}
